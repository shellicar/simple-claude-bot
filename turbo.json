{
  "$schema": "https://turborepo.dev/schema.json",
  "ui": "stream-with-experimental-timestamps",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "type-check": {
      "dependsOn": ["^type-check"]
    },
    "package": {
      "dependsOn": ["build"]
    },
    "deploy:dev": {
      "dependsOn": ["build", "package"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}

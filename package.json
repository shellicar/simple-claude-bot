{
  "name": "@simple-claude-bot/root",
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "test": "turbo test",
    "type-check": "turbo type-check",
    "ci:fix": "biome check --write",
    "knip": "knip",
    "dockerv1:build": "docker compose -f banananetv1/compose.yaml build",
    "dockerv1:up": "docker compose -f banananetv1/compose.yaml up -d",
    "dockerv1:down": "docker compose -f banananetv1/compose.yaml down",
    "dockerv1:attach": "docker attach banananetv1-ears-1",
    "dockerv1:logs": "docker compose -f banananetv1/compose.yaml logs -f",
    "dockerv1:deploy": "./banananetv1/deploy.sh",
    "deploy:v1": "run-s build dockerv1:build dockerv1:deploy dockerv1:logs",
    "dockerv2:build": "docker compose -f banananetv2/compose.yaml build",
    "dockerv2:up": "docker compose -f banananetv2/compose.yaml up -d",
    "dockerv2:down": "docker compose -f banananetv2/compose.yaml down",
    "dockerv2:attach": "docker attach banananetv2-ears-1",
    "dockerv2:logs": "docker compose -f banananetv2/compose.yaml logs -f",
    "dockerv2:deploy": "./banananetv2/deploy.sh",
    "deploy:v2": "run-s build dockerv2:build dockerv2:deploy dockerv2:logs"
  },
  "packageManager": "pnpm@10.29.2+sha512.bef43fa759d91fd2da4b319a5a0d13ef7a45bb985a3d7342058470f9d2051a3ba8674e629672654686ef9443ad13a82da2beb9eeb3e0221c87b8154fff9d74b8",
  "devDependencies": {
    "@biomejs/biome": "^2.3.15",
    "@types/node": "^25.2.3",
    "knip": "^5.83.1",
    "lefthook": "^2.1.1",
    "npm-run-all2": "^8.0.4",
    "turbo": "^2.8.7",
    "typescript": "^5.9.3"
  }
}

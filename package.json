{
  "name": "simple-claude-bot",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsx build.ts",
    "type-check": "tsc -p tsconfig.check.json",
    "start": "node --env-file=.env .",
    "build:watch": "tsx build.ts --watch",
    "start:watch": "node --env-file=.env --watch-path=dist .",
    "dev": "tsx build.ts && pnpm build:watch & pnpm start:watch",
    "setup": "node --env-file=.env dist/setup.js",
    "verify": "node --env-file=.env dist/verify.js",
    "docker:build": "pnpm build && docker build -t simple-claude-bot .",
    "_docker:run": "docker run -it --init --env-file .env -v ~/.claude-bot:/home/bot/.claude -v ./sandbox:/sandbox simple-claude-bot",
    "docker:run": "docker run -it --init --env-file .env -v ~/.claude/.credentials.json:/home/bot/.claude/.credentials.json:ro -v ~/.claude-bot:/home/bot/.claude -v ./sandbox:/sandbox simple-claude-bot"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.37",
    "@js-joda/core": "^5.7.0",
    "@js-joda/locale_en": "^4.15.3",
    "@js-joda/timezone": "^2.23.0",
    "discord.js": "^14.25.1",
    "winston": "^3.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@dotenvx/dotenvx": "^1.52.0",
    "@shellicar/build-clean": "^1.2.1",
    "@shellicar/build-version": "^1.3.3",
    "@tsconfig/node22": "^22.0.5",
    "@types/node": "^25.2.2",
    "discord-api-types": "^0.38.38",
    "esbuild": "^0.27.3",
    "glob": "^13.0.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.28.2+sha512.41872f037ad22f7348e3b1debbaf7e867cfd448f2726d9cf74c08f19507c31d2c8e7a11525b983febc2df640b5438dee6023ebb1f84ed43cc2d654d2bc326264"
}